{
    "name": "php-magic-number-detector",
    "displayName": "PHP Magic Number Detector",
    "description": "Magic Number Detector",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.106.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "php-magic-number-detector.check",
                "title": "PHPMND: Check for Magic Numbers"
            }
        ],
        "configuration": {
            "title": "PHP Magic Number Detector",
            "properties": {
                "phpmnd.executablePath": {
                    "type": "string",
                    "default": "phpmnd",
                    "description": "Path to the phpmnd executable. If phpmnd is in your PATH, use 'phpmnd'. Otherwise, provide the full path."
                },
                "phpmnd.ignoreNumbers": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Numbers to ignore (e.g., ['0', '1'])"
                },
                "phpmnd.ignoreStrings": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "String patterns to ignore"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.106.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "eslint": "^9.36.0",
        "typescript": "^5.9.3",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2"
    }
}
